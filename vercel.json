{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.vercel.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-backend-url.vercel.app",
    "REACT_APP_SCHOOL_NAME": "Srijan School",
    "REACT_APP_SCHOOL_EMAIL": "srijanschool@gmail.com",
    "REACT_APP_SCHOOL_PHONE": "+91-9876543210",
    "REACT_APP_SCHOOL_ADDRESS": "Haldwani, Uttarakhand, India",
    "REACT_APP_SCHOOL_ESTABLISHED": "2018"
  }
}
